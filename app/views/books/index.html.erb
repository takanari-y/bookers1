<% if flash[:notice] %>
 <p class="flash"><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>

 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show',book_path(book.id) %></td>
      <td><%= link_to 'Edit',edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" =>"are you sure?", commit: "OK", cancel: "キャンセル" %></td>
    </tr>
     <% end %>
   </tbody>
   </table>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- form_for部分 -->
 <%= form_for(@book, url: '/books') do |f| %>

    <span>Title</span>
    <br>
    <%= f.text_field :title %>
<br>
    <span>Body</span>
<br>
    <%= f.text_area :body %>
<br>
    <%= f.submit 'Create book' %>

<% end %>









